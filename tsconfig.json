{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    "rootDirs": ["src", "test"],

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
    },
    "esModuleInterop": true
  },
  "exclude": [
    "./node_modules/**/*",
    "./.vscode/*",
    "./build/**/*",
    "./coverage"
  ]
}